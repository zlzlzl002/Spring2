<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="file">
	<select id="getCount" parameterType="fileDto"
		resultType="int">
		SELECT NVL(MAX(ROWNUM), 0)
		FROM board_data
		<where>
			<if test="writer != null">
				OR writer LIKE '%'||#{writer}||'%'
			</if>
			<if test="title != null">
				OR title LIKE '%'||#{title}||'%'
			</if>
			<if test="orgFileName != null">
				OR orgFileName LIKE '%'||#{orgFileName}||'%'
			</if>
		</where>
	</select>

	<select id="getList" parameterType="fileDto" 
		resultType="fileDto">
		SELECT *
		FROM (SELECT result1.*,ROWNUM rnum
			  FROM (SELECT num,writer,title,orgFileName,fileSize,
			  		TO_CHAR(regdate, 'YYYY.MM.DD AM HH"시 "MM"분"') regdate
			  		FROM board_data 
			  		<where>
						<if test="writer != null">
							OR writer LIKE '%'||#{writer}||'%'
						</if>
						<if test="title != null">
							OR title LIKE '%'||#{title}||'%'
						</if>
						<if test="orgFileName != null">
							OR orgFileName LIKE '%'||#{orgFileName}||'%'
						</if>
					</where>	
			  		ORDER BY num DESC) result1
			  )
		WHERE rnum BETWEEN #{startRowNum} AND #{endRowNum}	
	</select>
	
	<insert id="insert" parameterType="fileDto">
		INSERT INTO board_data
		(num,writer,title,orgFileName,saveFileName,fileSize,regdate)
		VALUES(board_data_seq.NEXTVAL, #{writer}, #{title},
		#{orgFileName}, #{saveFileName}, #{fileSize}, SYSDATE)
	</insert>
	
	<select id="getData" parameterType="int"
		resultType="fileDto">
		SELECT num,writer,title,orgFileName,saveFileName,fileSize,regdate
		FROM board_data
		WHERE num=#{num}
	</select>
	
	<delete id="delete" parameterType="int">
		DELETE FROM board_data
		WHERE num=#{num}
	</delete>
</mapper>














